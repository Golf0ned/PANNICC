define i32 @while_basic() {
entry:
  %0 = alloca i32
  %1 = alloca i32
  store i32 0, ptr %1
  br label 2

2:
  br i32 1, label 3, label 6

3:
  %4 = load ptr %1
  %5 = add i32 %4, i32 2
  store i32 %5, ptr %1
  br label 2

6:
  %7 = load ptr %1
  store i32 %7, ptr %0
  br label 8

8:
  %9 = load ptr %0
  ret i32 %9
}

define i32 @while_complex() {
entry:
  %0 = alloca i32
  %1 = alloca i32
  store i32 0, ptr %1
  %2 = alloca i32
  store i32 100, ptr %2
  br label 3

3:
  %4 = load ptr %2
  br i32 %4, label 5, label 10

5:
  %6 = load ptr %1
  %7 = add i32 %6, i32 5
  store i32 %7, ptr %1
  %8 = load ptr %2
  %9 = sub i32 %8, i32 1
  store i32 %9, ptr %2
  br label 3

10:
  %11 = load ptr %1
  store i32 %11, ptr %0
  br label 12

12:
  %13 = load ptr %0
  ret i32 %13
}

define i32 @while_empty() {
entry:
  %0 = alloca i32
  br label 1

1:
  br i32 0, label 2, label 3

2:
  br label 1

3:
  store i32 0, ptr %0
  br label 4

4:
  %5 = load ptr %0
  ret i32 %5
}

define i32 @while_if() {
entry:
  %0 = alloca i32
  %1 = alloca i32
  store i32 200, ptr %1
  br label 2

2:
  br i32 1, label 3, label 8

3:
  %4 = load ptr %1
  br i32 %4, label 5, label 6

5:
  br label 7

6:
  store i32 500, ptr %0
  br label 9

7:
  br label 2

8:
  store i32 0, ptr %0
  br label 9

9:
  %10 = load ptr %0
  ret i32 %10
}
