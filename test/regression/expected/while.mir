define i64 @while_basic() {
entry:
  %0 = alloca i64
  %1 = alloca i64
  store i64 0, ptr %1
  br label 2

2:
  br i64 1, label 3, label 6

3:
  %4 = load ptr %1
  %5 = add i64 %4, i64 2
  store i64 %5, ptr %1
  br label 2

6:
  %7 = load ptr %1
  store i64 %7, ptr %0
  br label 8

8:
  %9 = load ptr %0
  ret i64 %9
}

define i64 @while_complex() {
entry:
  %0 = alloca i64
  %1 = alloca i64
  store i64 0, ptr %1
  %2 = alloca i64
  store i64 100, ptr %2
  br label 3

3:
  %4 = load ptr %2
  br i64 %4, label 5, label 10

5:
  %6 = load ptr %1
  %7 = add i64 %6, i64 5
  store i64 %7, ptr %1
  %8 = load ptr %2
  %9 = sub i64 %8, i64 1
  store i64 %9, ptr %2
  br label 3

10:
  %11 = load ptr %1
  store i64 %11, ptr %0
  br label 12

12:
  %13 = load ptr %0
  ret i64 %13
}

define i64 @while_empty() {
entry:
  %0 = alloca i64
  br label 1

1:
  br i64 0, label 2, label 3

2:
  br label 1

3:
  store i64 0, ptr %0
  br label 4

4:
  %5 = load ptr %0
  ret i64 %5
}

define i64 @while_if() {
entry:
  %0 = alloca i64
