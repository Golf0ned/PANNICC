define i64 @simplify_cfg_delete_orphaned() {
entry:
  %0 = alloca i64
  br i64 1, label 1, label 2

1:
  store i64 2, ptr %0
  br label 3

2:
  store i64 3, ptr %0
  br label 3

3:
  %4 = load ptr %0
  ret i64 %4
}

define i64 @simplify_cfg_merge_straight_line() {
entry:
  %0 = alloca i64
  %1 = alloca i64
  store i64 0, ptr %1
  br i64 1, label 2, label 8

2:
  br i64 2, label 3, label 4

3:
  store i64 3, ptr %0
  br label 9

4:
  %5 = load ptr %1
  %6 = add i64 %5, i64 4
  store i64 %6, ptr %1
  %7 = load ptr %1
  store i64 %7, ptr %0
  br label 9

8:
  store i64 5, ptr %0
  br label 9

9:
  %10 = load ptr %0
  ret i64 %10
}

define i64 @simplify_cfg_delete_empty() {
entry:
  %0 = alloca i64
  br i64 1, label 1, label 2

1:
  br i64 2, label 3, label 3

2:
  br i64 3, label 3, label 3

3:
  store i64 4, ptr %0
  %4 = load ptr %0
  ret i64 %4
}
