define i32 @simplify_cfg_delete_orphaned() {
entry:
  %0 = alloca i32
  br i32 1, label 1, label 2

1:
  store i32 2, ptr %0
  br label 3

2:
  store i32 3, ptr %0
  br label 3

3:
  %4 = load ptr %0
  ret i32 %4
}

define i32 @simplify_cfg_merge_straight_line() {
entry:
  %0 = alloca i32
  %1 = alloca i32
  store i32 0, ptr %1
  br i32 1, label 2, label 8

2:
  br i32 2, label 3, label 4

3:
  store i32 3, ptr %0
  br label 9

4:
  %5 = load ptr %1
  %6 = add i32 %5, i32 4
  store i32 %6, ptr %1
  %7 = load ptr %1
  store i32 %7, ptr %0
  br label 9

8:
  store i32 5, ptr %0
  br label 9

9:
  %10 = load ptr %0
  ret i32 %10
}

define i32 @simplify_cfg_delete_empty() {
entry:
  %0 = alloca i32
  br i32 1, label 1, label 2

1:
  br i32 2, label 3, label 3

2:
  br i32 3, label 3, label 3

3:
  store i32 4, ptr %0
  %4 = load ptr %0
  ret i32 %4
}

define i32 @simplify_cfg_empty_loop() {
entry:
  %0 = alloca i32
  br label 1

1:
  br i32 0, label 1, label 2

2:
  store i32 0, ptr %0
  %3 = load ptr %0
  ret i32 %3
}
