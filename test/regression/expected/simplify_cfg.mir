define i32 @simplify_cfg_delete_orphaned() {
entry:
  %0 = alloca i32
  br i32 1, label 1, label 2

1:
  store i32 2, ptr %0
  br label 4

2:
  store i32 3, ptr %0
  br label 4

3:
  br label 4

4:
  %5 = load ptr %0
  ret i32 %5
}

define i32 @simplify_cfg_merge_straight_line() {
entry:
  %0 = alloca i32
  %1 = alloca i32
  store i32 0, ptr %1
  br i32 1, label 2, label 7

2:
  br i32 2, label 3, label 4

3:
  store i32 3, ptr %0
  br label 10

4:
  %5 = load ptr %1
  %6 = add i32 %5, i32 4
  store i32 %6, ptr %1
  br label 8

7:
  store i32 5, ptr %0
  br label 10

8:
  %9 = load ptr %1
  store i32 %9, ptr %0
  br label 10

10:
  %11 = load ptr %0
  ret i32 %11
}

